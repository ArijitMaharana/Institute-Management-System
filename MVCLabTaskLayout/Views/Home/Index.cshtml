@{
    ViewBag.Title = "Home - Index Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Particle Background -->
<div id="particles-js"></div>

<!-- Welcome Section -->
<div class="welcome-section">
    <h2><span id="typed-text"></span></h2>
    <p>Providing Quality Education And Career Opportunities</p>
    <h5>Featured Sections</h5>
</div>

<!-- Feature Cards Section -->
<div class="feature-container">
    <!-- Card 1 -->
    <div class="feature-card card-blue">
        <img src="~/Images/Book.jpg" alt="Courses" />
        <h3>Our Courses</h3>
        <p>
            Explore a wide variety of professional, career-focused courses tailored for industry needs.
            Whether you're starting out or upskilling, our curriculum ensures you gain in-demand knowledge,
            real-world skills, and practical exposure.
        </p>
        <a href="/MVCLabTaskLayout/Courses/CourseList" class="btn">
            <i class="fas fa-book-reader animated-icon"></i> View Courses
        </a>
    </div>

    <!-- Card 2 -->
    <div class="feature-card card-magenta card-large">
        <img src="~/Images/Admission.png" alt="Admission" />
        <h3>Admission Open</h3>
        <p>
            Secure your seat in our prestigious institute! Admissions are open for the upcoming session.
            With limited seats and high demand, early registration guarantees access to top-notch faculty,
            vibrant campus life, internship opportunities, and personalized mentorship throughout your journey.
        </p>
        <a href="/MVCLabTaskLayout/Admissions/Apply" class="btn">
            <i class="fas fa-user-plus animated-icon"></i> Apply Now
        </a>
    </div>

    <!-- Card 3 -->
    <div class="feature-card card-blue">
        <img src="~/Images/Faculty.jpg" alt="Faculty" />
        <h3>Expert Faculty</h3>
        <p>
            Learn from experienced professionals and industry experts.<br />
            Our faculty brings years of academic and real-world experience to the classroom,
            ensuring you receive the best possible education.
        </p>
        <a href="/MVCLabTaskLayout/Faculty/Details" class="btn">
            <i class="fas fa-chalkboard-teacher animated-icon"></i> View Faculty
        </a>
    </div>
</div>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- STYLES -->
<style>
    #particles-js {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -10;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background: #000;
        color: #fff;
        overflow-x: hidden;
    }

    .welcome-section {
        text-align: center;
        padding: 80px 20px 30px;
        animation: fadeSlideDown 1s ease-out forwards;
        opacity: 0;
    }

    .welcome-section h2 {
        font-size: 2.8rem;
        font-weight: bold;
        background: linear-gradient(45deg, #ff00cc, #3333ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 15px rgba(255, 0, 255, 0.4), 0 0 25px rgba(0, 255, 255, 0.3);
    }

    .feature-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        align-items: flex-start; /* <--- prevents equal height rows */
        gap: 30px;
        padding: 40px 15px;
        animation: fadeInCards 1.3s ease-out forwards;
        opacity: 0;
    }


    .feature-card {
        width: 270px;

        min-height: unset;

        border-radius: 20px;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(12px);
        padding: 20px 15px;
        text-align: center;
        color: #fff;
        transition: all 0.5s ease;
        animation: popIn 1.4s ease-out forwards;
        opacity: 0;
        border: 2px solid #0ff;
        box-shadow: 0 0 15px #0ff, 0 0 25px #0ff;
    }

    .feature-card:nth-child(1),
    .feature-card:nth-child(3) {
        width: 300px;
    }

        .feature-card.card-large {
            min-height: 600px;
            height: auto;
            transform: scale(1.05);
        }


        .feature-card img {
            width: 120px;
            height: 120px;
            border-radius: 15px;
            margin-bottom: 15px;
            object-fit: contain;
            animation: floatIcon 3s infinite ease-in-out;
        }

    .feature-card h3 {
        margin-top: 10px;
        text-shadow: 0 0 8px #fff, 0 0 12px #00f2fe;
    }

    .feature-card p {
        font-size: 0.95rem;
        margin-bottom: 15px;
        color: #eee;
    }

    .btn {
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: #fff;
        background: linear-gradient(to right, #ff00cc, #3333ff);
        border: 2px solid transparent;
        box-shadow: 0 0 15px #ff00cc, 0 0 25px #3333ff;
        transition: all 0.4s ease;
        text-decoration: none;
    }

    .btn:hover {
        transform: scale(1.1);
        background: linear-gradient(to right, #7d12e2, #7d12e2);
        box-shadow: 0 0 25px #7d12e2, 0 0 35px #7d12e2;
    }

    .animated-icon {
        animation: pulseIcon 1.8s infinite ease-in-out;
    }

    .card-blue {
        border-color: #1913f0;
        box-shadow: 0 0 15px #1913f0, 0 0 25px #1913f0;
    }

    .card-blue:hover {
        transform: scale(1.07);
        box-shadow: 0 0 30px #1913f0, 0 0 40px #1913f0;
    }

    .card-magenta {
        border-color: #ff00ff;
        box-shadow: 0 0 20px #ff00ff, 0 0 30px #ff00ff;
    }

    .card-magenta:hover {
        transform: scale(1.07);
        border-color: #7d12e2;
        box-shadow: 0 0 30px #7d12e2, 0 0 40px #7d12e2;
    }

    @@keyframes pulseIcon {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.3); opacity: 0.7; }
    }

    @@keyframes fadeSlideDown {
        0% { opacity: 0; transform: translateY(-30px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    @@keyframes fadeInCards {
        0% { opacity: 0; transform: scale(0.95); }
        100% { opacity: 1; transform: scale(1); }
    }

    @@keyframes popIn {
        0% { opacity: 0; transform: scale(0.9); }
        100% { opacity: 1; transform: scale(1); }
    }

    @@keyframes floatIcon {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }

    .feature-card:nth-child(1) { animation-delay: 0.3s; }
    .feature-card:nth-child(2) {  animation-delay: 0.6s; }
    .feature-card:nth-child(3) { animation-delay: 0.9s; }

    @@media (max-width: 768px) {
        .feature-card {
            width: 90%;
            height: auto !important;
        }

        .welcome-section h2 {
            font-size: 1.8rem;
        }
    }
</style>

<!-- SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
<script>
    var typed = new Typed("#typed-text", {
        strings: ["Welcome To Our Institute", "Empowering Your Future", "Let's Learn & Grow!"],
        typeSpeed: 50,
        backSpeed: 25,
        backDelay: 2000,
        startDelay: 500,
        loop: true,
        showCursor: true
    });

    particlesJS("particles-js", {
        particles: {
            number: { value: 80 },
            color: { value: "#0ff" },
            shape: { type: "circle" },
            opacity: { value: 0.4 },
            size: { value: 3 },
            move: { enable: true, speed: 1.5 }
        },
        interactivity: {
            events: {
                onhover: { enable: true, mode: "repulse" },
                onclick: { enable: true, mode: "push" }
            }
        }
    });
</script>
