@{
    ViewBag.Title = "Faculty - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var gradients = new List<string> {
        "linear-gradient(135deg, #1f4037, #99f2c8)",
        "linear-gradient(135deg, #360033, #0b8793)",
        "linear-gradient(135deg, #2b5876, #4e4376)",
        "linear-gradient(135deg, #3a1c71, #d76d77, #ffaf7b)",
        "linear-gradient(135deg, #000046, #1CB5E0)",
        "linear-gradient(135deg, #000428, #004e92)"
    };
    var selectedGradient = gradients[new Random().Next(gradients.Count)];
}
<style>
    body {
        background: linear-gradient(to top left, #fcb045, #fd1d1d, #833ab4, #1f1c2c, #000000);
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: fuchsia;
        margin-bottom: 40px;
        font-size: 2.8rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px black, 4px 4px 10px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease;
    }

    @@keyframes pulseGlow {
        0% {
            text-shadow: 0 0 5px #8fce00, 0 0 10px #b2ff59, 0 0 15px #ccff90;
        }

        50% {
            text-shadow: 0 0 20px #8fce00, 0 0 30px #b2ff59, 0 0 40px #ccff90;
        }

        100% {
            text-shadow: 0 0 5px #8fce00, 0 0 10px #b2ff59, 0 0 15px #ccff90;
        }
    }

    .faculty-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding-bottom: 40px;
    }

    .faculty-card {
        width: 260px;
        min-height: 460px;
        border-radius: 20px;
        background: rgba(0, 0, 0, 0.65);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 25px black;
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease, border-color 0.4s ease;
        animation: slideUpCard 1s ease-in-out;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding-bottom: 15px;
    }

        .faculty-card:hover {
            transform: scale(1.06);
            box-shadow: 0 0 40px black;
            border-color: chartreuse;
        }

        .faculty-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 20px 20px 0 0;
            transition: transform 0.3s ease;
        }

        .faculty-card:hover img {
            transform: scale(1.04);
        }

        .faculty-card h6 {
            margin-top: 15px;
            text-align: center;
            color: chartreuse;
            font-size: 1.2rem;
            font-weight: 700;
        }

        .faculty-card p {
            color: #f0f0f0;
            text-align: center;
            padding: 0 15px;
            font-size: 0.95rem;
            margin-top: 8px;
        }

        .faculty-card .extra-text {
            margin: 10px 15px 10px;
            font-size: 0.85rem;
            text-align: center;
            color: #cccccc;
        }

    .register-btn {
        margin-top: 10px;
        padding: 10px 20px;
        font-size: 1rem;
        color: white;
        background: linear-gradient(45deg, #00c6ff, #0072ff);
        border: none;
        border-radius: 30px;
        cursor: pointer;
        box-shadow: 0 0 10px #00c6ff;
        transition: all 0.3s ease;
    }

        .register-btn:hover {
            box-shadow: 0 0 20px #00c6ff, 0 0 30px #0072ff;
            transform: scale(1.05);
            background: linear-gradient(45deg, #0072ff, #00c6ff);
        }

    @@keyframes glowPurple {
        0% {
            text-shadow: 0 0 5px #7d12e2, 0 0 10px #7d12e2;
        }

        100% {
            text-shadow: 0 0 15px #7d12e2, 0 0 25px #7d12e2;
        }
    }

    @@keyframes glowGold {
        0% {
            text-shadow: 0 0 10px #FFD700, 0 0 20px #FFA500;
        }

        100% {
            text-shadow: 0 0 20px #FFA500, 0 0 40px #FFD700;
        }
    }

    @@keyframes slideUpCard {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes fadeInBody {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@media (max-width: 768px) {
        .faculty-card {
            width: 90%;
        }
    }
</style>

<div class="page-content">
