@model MVCLabTaskLayout.Models.RegisterAdmin

@{
    ViewBag.Title = "DisplayAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(-45deg, #8e44ad, #3498db, #1abc9c, #e74c3c);
        background-size: 400% 400%;
        animation: gradientBG 12s ease infinite;
        min-height: 100vh;
        overflow-x: hidden;
    }

    @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        25% { background-position: 50% 50%; }
        50% { background-position: 100% 50%; }
        75% { background-position: 50% 0%; }
        100% { background-position: 0% 50%; }
    }

    .fade-in {
        animation: fadeIn 1.5s ease-in;
    }

    @@keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px 10px;
        box-sizing: border-box;
    }

    .flip-card {
        width: 350px;
        height: 460px;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 1s;
    }

    .flip-card:hover {
        transform: rotateY(180deg);
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
    }

    .card-side {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        padding: 30px;
        color: white;
    }

    .card-front {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
    }

    .card-back {
        background-color: blueviolet;
        transform: rotateY(180deg);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card-front h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 20px;
        color: #00ffe1;
        text-shadow: 0 0 5px #00ffe1;
    }

    .info-item {
        margin-bottom: 15px;
    }

    .info-item label {
        font-weight: bold;
        display: block;
        font-size: 1rem;
        color: #ffe066;
    }

    .info-item span {
        display: block;
        font-size: 0.95rem;
        color: #ffffff;
        margin-top: 5px;
    }

    .card-back h2 {
        font-size: 1.5rem;
        margin-bottom: 20px;
        color: #fff;
    }

    .card-back a {
        text-decoration: none;
        padding: 12px 20px;
        margin: 10px;
        background-color: #fff;
        color: #111;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .card-back a:hover {
        background-color: #111;
        color: #fff;
        transform: scale(1.05);
    }
</style>

<div class="card-container fade-in">
    <div class="flip-card">
        <div class="flip-card-inner">

            <!-- Front Side -->
            <div class="card-side card-front">
                <h2><i class="fa fa-user-circle"></i> Admin Profile</h2>

                <div class="info-item">
                    <label><i class="fa fa-user"></i> Name</label>
                    <span>@Model.Name</span>
                </div>

                <div class="info-item">
                    <label><i class="fa fa-id-badge"></i> User ID</label>
                    <span>@Model.UserId</span>
                </div>

                <div class="info-item">
                    <label><i class="fa fa-envelope"></i> Email</label>
                    <span>@Model.Email</span>
                </div>

                <div class="info-item">
                    <label><i class="fa fa-phone"></i> Mobile</label>
                    <span>@Model.Mobile</span>
                </div>

                <div class="info-item">
                    <label><i class="fa fa-toggle-on"></i> Status</label>
                    <span>@Model.Status</span>
                </div>
            </div>

            <!-- Back Side -->
            <div class="card-side card-back">
               
                @Html.ActionLink("Edit Profile", "EditAdmin", new { id = Model.UserId })
                @Html.ActionLink("Back to Admin Details", "DisplayAdmins")
            </div>

        </div>
    </div>
</div>
