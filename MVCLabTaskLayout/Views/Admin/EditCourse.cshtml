@model MVCLabTaskLayout.Models.Course

@{
    ViewBag.Title = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({ once: true, duration: 1000 });
</script>

<style>
    body {
        background: linear-gradient(135deg, #2e2e54, #2c3e50);
        color: #fff;
        overflow-x: hidden;
    }

    .edit-container {
        max-width: 700px;
        margin: 40px auto;
        background: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        animation: fadeInUp 1s ease-out;
    }

        .edit-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-size: 32px;
            color: #00f0ff;
            font-weight: 700;
            text-shadow: 0 0 10px #00f0ff;
        }

    label {
        font-weight: 600;
        color: #f1f1f1;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid #00f0ff;
        color: #fff;
        border-radius: 10px;
        transition: 0.3s ease;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: #00f0ff;
            box-shadow: 0 0 10px #00f0ff, 0 0 30px #1fc8db;
        }

    .btn-glow, .btn-back {
        background: linear-gradient(45deg, #00f0ff, #1fc8db);
        color: #000;
        padding: 10px 25px;
        font-weight: 600;
        border: none;
        border-radius: 50px;
        box-shadow: 0 0 10px #00f0ff;
        transition: all 0.4s ease;
        cursor: pointer;
    }

        .btn-glow:hover, .btn-back:hover {
            box-shadow: 0 0 25px #00f0ff, 0 0 40px #1fc8db;
            transform: scale(1.05);
        }

    .btn-back {
        background: transparent;
        border: 2px solid #00f0ff;
        color: #00f0ff;
        margin-top: 20px;
    }

        .btn-back:hover {
            background: #00f0ff;
            color: #000;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="edit-container" data-aos="zoom-in">
    <h2><i class="fas fa-edit"></i> Edit Course</h2>

    @using (Html.BeginForm("UpdateCourse", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CourseId)

        <div class="form-group" data-aos="fade-right">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter Course Name" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" data-aos="fade-left">
            @Html.LabelFor(model => model.Fees)
            @Html.TextBoxFor(model => model.Fees, new { @class = "form-control", placeholder = "Enter Course Fees" })
            @Html.ValidationMessageFor(model => model.Fees, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" data-aos="fade-right">
            @Html.LabelFor(model => model.Duration)
            @Html.TextBoxFor(model => model.Duration, new { @class = "form-control", placeholder = "Enter Course Duration" })
            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
        </div>

        <br />
        <div class="form-group text-center" data-aos="zoom-in">
            <input type="submit" value="Save Changes" class="btn-glow" />
        </div>
    }

<br /> <br />

    <div class="text-center" data-aos="fade-up">
        <a style="text-decoration:none" href="@Url.Action("DisplayCourses")" class="btn-back">
            ← Back to Course Details
        </a>
    </div>
</div>
