        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid var(--accent-color);
    }

    .faculty-table-futuristic tbody tr {
        border-bottom: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    .faculty-table-futuristic tbody tr:hover {
        background-color: var(--dark-bg-secondary);
        box-shadow: 0 0 10px rgba(0, 212, 255, 0.1);
        transform: scale(1.01);
    }

    .faculty-table-futuristic td {
        font-size: 0.95rem;
    }

    .action-cell {
        white-space: nowrap;
        text-align: center;
    }

    .btn-futuristic {
        display: inline-block;
        padding: 8px 18px;
        margin: 0 4px;
        text-decoration: none;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        border: 1px solid transparent;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-edit-futuristic {
        color: var(--success-color);
        border: 1px solid var(--success-color);
    }

    .btn-edit-futuristic:hover {
        background-color: var(--success-color);
        color: #fff;
        box-shadow: 0 0 12px rgba(76, 175, 80, 0.5);
        transform: translateY(-2px);
    }

    .btn-delete-futuristic {
        color: var(--danger-color);
        border: 1px solid var(--danger-color);
    }

    .btn-delete-futuristic:hover {
        background-color: var(--danger-color);
        color: #fff;
        box-shadow: 0 0 12px rgba(255, 77, 77, 0.5);
        transform: translateY(-2px);
    }

    .add-btn-container-futuristic {
        text-align: center;
        margin-top: 30px;
    }

    .btn-add-futuristic {
        padding: 12px 30px;
        background: linear-gradient(90deg, var(--accent-color), #00aaff);
        color: var(--dark-bg-primary);
        border-radius: 30px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-add-futuristic:hover {
        background: linear-gradient(90deg, #00aaff, var(--accent-color));
        box-shadow: 0 0 15px rgba(0, 212, 255, 0.3);
        transform: translateY(-2px);
    }

    .no-data {
        color: var(--text-secondary);
        text-align: center;
        font-size: 1rem;
        padding: 20px;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .faculty-table-futuristic thead {
            display: none;
        }

        .faculty-table-futuristic tbody tr {
            display: block;
            margin-bottom: 15px;
        }

        .faculty-table-futuristic td {
            display: block;
            text-align: right;
            padding: 10px 20px;
        }

        .faculty-table-futuristic td::before {
            content: attr(data-label);
            float: left;
            text-transform: uppercase;
            color: var(--text-secondary);
            font-weight: bold;
        }

        .search-bar-futuristic {
            width: 90%;
        }
    }
</style>
