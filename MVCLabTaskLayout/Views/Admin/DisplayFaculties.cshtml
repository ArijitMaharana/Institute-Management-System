        color: var(--text-secondary);
        font-size: 1.1rem;
        pointer-events: none;
    }

    .faculty-table-container-futuristic {
        overflow-x: auto;
        margin-top: 20px;
        background: var(--dark-bg-primary);
        border-radius: 12px;
        padding: 15px;
