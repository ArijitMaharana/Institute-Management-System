@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Institute Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
    

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #00f2fe, #4facfe);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .glass-navbar {
            background: rgba(31, 28, 44, 0.7);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-size: 1.8rem;
            font-weight: bold;
            color: #00f2fe;
        }

            .navbar-brand i {
                margin-right: 10px;
                color: #ffc107;
                font-size: 1.8rem;
            }

            .navbar-brand span {
                background: linear-gradient(to right, #00f2fe, #4facfe);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .nav-link.glow-hover {
            color: #fff !important;
            transition: all 0.3s ease;
        }

            .nav-link.glow-hover:hover {
                color: #ffeaa7 !important;
                text-shadow: 0 0 5px #fff, 0 0 10px #ffeaa7;
            }

        .dropdown-menu {
            background-color: #2c2c54;
        }

        .dropdown-item {
            color: #fff;
        }

            .dropdown-item:hover {
                background-color: #3c3c74;
                color: #ffd32a;
            }

        footer {
            background-color: #121212;
            color: white;
            padding: 20px 0;
            margin-top: 30px;
        }

            footer a {
                color: #00f2fe;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm glass-navbar sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/MVCLabTaskLayout/Home/Index">
                <i class="fas fa-university"></i>
                <span class="fw-bold fs-4 text-white">My Institute</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto me-4 mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link glow-hover" href="/MVCLabTaskLayout/Home/Index"><i class="fas fa-home me-1"></i> Home</a></li>
                    <li class="nav-item"><a class="nav-link glow-hover" href="/MVCLabTaskLayout/Courses/CourseList"><i class="fas fa-book me-1"></i> Courses</a></li>
                    <li class="nav-item"><a class="nav-link glow-hover" href="/MVCLabTaskLayout/Admissions/Apply"><i class="fas fa-user-edit me-1"></i> Admissions</a></li>
                    <li class="nav-item"><a class="nav-link glow-hover" href="/MVCLabTaskLayout/Faculty/Details"><i class="fas fa-chalkboard-teacher me-1"></i> Faculty</a></li>






                    @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"] == true)
                    {
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><a class="dropdown-item" href="/MVCLabTaskLayout/Admin/Dashboard"><i class="fas fa-tachometer-alt me-1"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" href="/MVCLabTaskLayout/Admin/DisplayStudents"><i class="fas fa-users me-1"></i> Manage Students</a></li>
                                <li><a class="dropdown-item" href="/MVCLabTaskLayout/Admin/DisplayCourses"><i class="fas fa-book-open me-1"></i> Manage Courses</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/MVCLabTaskLayout/Account/Logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                <li class="nav-item ms-2">
                    <a class="btn btn-glow-purple btn-sm" href="/MVCLabTaskLayout/Account/Login"><i class="fas fa-lock"></i> Admin Login</a>
                </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="text-center">
        <div class="container">
            <p><strong>Contact:</strong> contact@institute.com | <i class="fas fa-phone"></i> +123 456 7890</p>
            <p>
                <a href="#"><i class="fab fa-facebook-f me-2"></i></a>
                <a href="#"><i class="fab fa-twitter me-2"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </p>
            <p>© 2025 My Institute. All Rights Reserved.</p>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
